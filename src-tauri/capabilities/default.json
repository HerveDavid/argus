{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "app": {
    "security": {
      "capabilities": [
        {
          "identifier": "draggable-window",
          "windows": [
            "*"
          ],
          "permissions": [
            "core:window:allow-start-dragging"
          ]
        }
      ]
    }
  },
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            {
              "validator": "*"
            }
          ],
          "name": "binaries/powsybl",
          "sidecar": true
        }
      ]
    },
    "shell:allow-open",
    "fs:default"
  ]
}