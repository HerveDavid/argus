{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "app": {
    "security": {
      "capabilities": [
        {
          "identifier": "draggable-window",
          "windows": [
            "*"
          ],
          "permissions": [
            "core:window:allow-start-dragging"
          ]
        }
      ]
    }
  },
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": false,
          "name": "binaries/powsybl",
          "sidecar": true
        }
      ]
    },
    "sidecars:default",
    "settings:default",
    "shell:allow-open",
    "fs:read-all",
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:image:default",
    "core:resources:default",
    "core:menu:default",
    "store:default",
    "store:allow-load",
    "store:allow-get-store",
    "store:allow-set",
    "store:allow-get",
    "store:allow-has",
    "store:allow-delete",
    "store:allow-clear",
    "store:allow-reset",
    "store:allow-keys",
    "store:allow-values",
    "store:allow-entries",
    "store:allow-length",
    "store:allow-reload",
    "store:allow-save",
    "dialog:default",
    "log:default"
  ]
}